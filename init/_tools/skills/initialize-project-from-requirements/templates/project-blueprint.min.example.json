{
  "version": 1,
  "project": {
    "name": "acme-app",
    "description": "Example minimal project blueprint (valid)."
  },
  "repo": {
    "layout": "single",
    "language": "typescript",
    "packageManager": "pnpm"
  },
  "capabilities": {
    "database": {
      "enabled": true
    },
    "frontend": {
      "enabled": false
    },
    "backend": {
      "enabled": false
    },
    "api": {
      "style": "none"
    }
  },
  "db": {
    "enabled": true,
    "ssot": "repo-prisma",
    "kind": "other",
    "environments": []
  },
  "ci": {
    "enabled": true,
    "provider": "github",
    "platform": "github-actions",
    "features": [
      "lint",
      "test",
      "build"
    ]
  },
  "features": {
    "contextAwareness": true,
    "ui": true,
    "environment": true,
    "packaging": true,
    "deployment": true,
    "release": true,
    "observability": true
  },
  "skills": {
    "packs": [
      "workflows",
      "standards"
    ]
  },
  "context": {
    "enabled": true,
    "mode": "contract",
    "environments": []
  }
}

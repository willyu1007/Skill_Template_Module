{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Project State",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "version",
    "createdAt",
    "updatedAt",
    "context"
  ],
  "properties": {
    "version": {
      "type": "integer",
      "const": 1
    },
    "createdAt": {
      "type": "string"
    },
    "updatedAt": {
      "type": "string"
    },
    "project": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "stage": {
          "type": "string",
          "enum": [
            "prototype",
            "mvp",
            "production",
            "maintenance",
            "archived"
          ]
        }
      }
    },
    "context": {
      "type": "object",
      "additionalProperties": true,
      "required": [
        "enabled",
        "mode"
      ],
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "mode": {
          "type": "string",
          "enum": [
            "contract",
            "snapshot"
          ]
        }
      }
    },
    "modular": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "enabled": {
          "type": "boolean"
        }
      }
    }
  }
}
